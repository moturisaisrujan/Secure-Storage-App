<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".notes.EditNote">


    <TextView
        android:id="@+id/text0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Title:"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/display1"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text0"
        android:background="@color/not"
        android:textColor="@color/black"
        android:padding="16dp"
        android:textSize="35dp"
        />
    <TextView
        android:id="@+id/text1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Created On:"
        android:layout_below="@+id/display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/display2"
        android:layout_below="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/not"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/text2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Decrypted Text:"
        android:paddingTop="16dp"
        android:layout_below="@+id/display2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/display3"
        android:textColor="@color/black"
        android:layout_below="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/not"
        android:padding="16dp"
        android:textSize="20dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/del"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"/>

</RelativeLayout>